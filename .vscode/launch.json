{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Flask App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--host=127.0.0.1",
                "--port=5000"
            ],
            "preLaunchTask": "start-flask",
            "postDebugTask": "stop-flask"
        }
    ]
}
